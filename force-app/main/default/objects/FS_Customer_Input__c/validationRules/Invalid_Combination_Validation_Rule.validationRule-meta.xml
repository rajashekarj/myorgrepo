<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Invalid_Combination_Validation_Rule</fullName>
    <active>true</active>
    <description>validation rules for Invalid selections</description>
    <errorConditionFormula>OR( 
AND( ISPICKVAL(FS_Requested_Cartridge_Order_Method__c,&quot;CokeSmart&quot;),ISPICKVAL(FS_Requested_Delivery_Method__c,&quot;Bottler&quot;)),
AND(ISPICKVAL(FS_Requested_Cartridge_Order_Method__c,&quot;VMS&quot;),ISPICKVAL(FS_Requested_Delivery_Method__c,&quot;Bottler&quot;)),
AND(ISPICKVAL(FS_Requested_Cartridge_Order_Method__c,&quot;Bottler&quot;),ISPICKVAL(FS_Requested_Delivery_Method__c,&quot;Distributor&quot;))
)</errorConditionFormula>
    <errorMessage>The order and delivery method combination is invalid. Please select again.</errorMessage>
</ValidationRule>
