            <type>user</type>
        </recipients>
        <recipients>
            <recipient>vethomas@coca-cola.com.fet</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>FS_Installation_Notfications/FS_Install_Rescheduled_with_Order_Processed</template>
