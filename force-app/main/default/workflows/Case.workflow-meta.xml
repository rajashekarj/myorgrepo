    <rules>
        <fullName>LastStatusChangeonCase</fullName>
        <actions>
            <name>Updatelaststatuschange</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>field gets update when case status changes on case object</description>
        <formula>AND(  (RecordType.Name==&#39;Non - North American Case&#39;||RecordType.Name==&#39;North American Case&#39; ||RecordType.Name==&#39;Linkage Management&#39;),  OR( (ISCHANGED( Status )), TEXT(Status)=&#39;New&#39; ,  AND(TEXT(Status)= &#39;Escalated&#39;,TEXT(PRIORVALUE(Sub_Status__c))!= TEXT(Sub_Status__c) ),  AND(TEXT(Status)= &#39;Assigned&#39;,TEXT(PRIORVALUE(Sub_Status__c))!= TEXT(Sub_Status__c) ),    AND(TEXT(Status)= &#39;Assigned&#39;,TEXT(PRIORVALUE(LM_Sub_Status__c))!= TEXT(LM_Sub_Status__c) ),  AND(TEXT(Status)= &#39;On Hold&#39;,TEXT(PRIORVALUE(Sub_Status__c))!= TEXT(Sub_Status__c) ) ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
